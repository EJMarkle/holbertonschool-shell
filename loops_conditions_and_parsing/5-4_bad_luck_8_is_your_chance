#!/usr/bin/env bash
# displays Best School 10 times, displays bad luck on 4th iterartion and good luck on 8th iteration
counter=1
while [ $counter -le 10 ]
do
	if [ $counter -eq 4 ]
		echo 'bad luck'
	elif [ $counter -eq 8 ]
		echo 'good luck'
	else [ $counter -le 10 ]
		echo 'Best School'
	fi
done
